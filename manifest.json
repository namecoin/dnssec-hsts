{
    "manifest_version": 2,
    "name": "DNSSEC-HSTS",
    "description": "Upgrades HTTP to HTTPS for websites that support DANE; this prevents sslstrip-style attacks.",
    "version": "1.0",
    "developer": {
        "name": "Jeremy Rand",
        "url": "https://www.namecoin.org/"
    },
    "applications": {
        "gecko": {
            "id": "dnssec-hsts@namecoin.org"
        }
    },
    "key": "",

    "icons": {
        "100": "icons/namecoin-coin.svg"
    },

    "permissions": ["nativeMessaging", "webRequest", "webRequestBlocking", "http://*/*"],

    "background": {
        "scripts": ["background-script.js"]
    },
    "web_accessible_resources": [
        "/pages/lookup_error/index.html"
    ]
}
